{
  "compilerOptions": {
    "target": "es6" /* Specify the ECMAScript target version */,
    "module": "commonjs" /* Specify module code generation */,
    "strict": true /* Enable strict mode */,
    "esModuleInterop": true /* Enable interoperability between CommonJS and ES Modules */,
    "skipLibCheck": true /* Skip type checking of declaration files */,
    "forceConsistentCasingInFileNames": true /* Ensure that casing is consistent in file names */,
    "outDir": "./dist" /* Redirect output structure to the directory */,
    "rootDir": "./src" /* Specify the root directory of input files */,
    "baseUrl": "." /* Specify the base directory to resolve non-relative module names */,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    } /* Specify path mapping to resolve module names */
  },
  "include": ["src/**/*.ts" /* Include TypeScript files in the compilation */],
  "exclude": ["node_modules" /* Exclude node_modules from the compilation */]
}
